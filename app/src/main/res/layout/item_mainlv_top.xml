<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/item_main_lv_top_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthly_expenditure"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/item_main_lv_top_tv_spend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="$ 0"
            android:layout_below="@+id/item_main_lv_top_tv1"/>

        <ImageButton
            android:id="@+id/item_main_lv_top_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/calendar"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/item_main_lv_top_tv1"/>

        <TextView
            android:id="@+id/item_main_lv_top_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthly_income"
            android:textColor="@color/white"
            android:layout_below="@id/item_main_lv_top_tv_spend"/>

        <TextView
            android:id="@+id/item_main_lv_top_tv_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 0"
            android:textColor="@color/white"
            android:layout_below="@id/item_main_lv_top_tv_spend"
            android:layout_toRightOf="@id/item_main_lv_top_tv2"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/item_main_lv_top_tv_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:text="$ 0"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/item_main_lv_top_tv2"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/item_main_lv_top_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="13dp"
            android:text="@string/monthly_remain"
            android:layout_toLeftOf="@+id/item_main_lv_top_tv_budget"
            android:layout_alignBottom="@id/item_main_lv_top_tv2"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/item_main_lv_top_tv_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Daily Expenditure $0   Daily Income $0"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"/>
</LinearLayout>